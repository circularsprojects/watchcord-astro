---
interface Props {
  title: string;
  image: string;
}

const { title, image } = Astro.props;

import { Image } from 'astro:assets';
---

<div class="flex p-4 w-full bg-slate-900 rounded-3xl flex-col justify-between">
  <Image src={image} alt={title} class="w-72 sm:w-96 self-center" width=640 height=640 loading="eager" />
</div>
